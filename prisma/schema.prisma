generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model Report {
  id            Int      @id @default(autoincrement())
  createdAt     DateTime @default(now())
  title         String
  summary       String
  samplePreview String   // JSON stored as string for SQLite compatibility
  stats         String   // JSON stored as string for SQLite compatibility
  llmModel      String
}

