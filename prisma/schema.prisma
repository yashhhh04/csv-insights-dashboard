generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL") // uses connection pooling
}

model Report {
  id            Int      @id @default(autoincrement())
  createdAt     DateTime @default(now())
  title         String
  summary       String   @db.Text // Ensures long AI summaries aren't truncated
  samplePreview String   @db.Text // Kept as String to match your existing logic
  stats         String   @db.Text
  llmModel      String
}